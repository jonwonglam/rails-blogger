
<h1 class="article_title">Articles tagged with '<%= @tag.name %>'</h1>

<ul>
  <% @tag.articles.each do |article| %>
    <li class="article">
      <span class="date"><%= article.created_at.strftime('%B %d, %Y')%> </span>
      <span class="tag">
        <% article.tags.each do |tag| %>
          <%= link_to tag.name, tag_path(tag) %>
        <% end %>
      </span>
      <%= link_to article.title, article_path(article), class: 'article_title' %>
      <p class="article_text"><%= article.body.truncate_words(30) %></p>
      <p class="read_more"><%= link_to "(Read More...)", article_path(article) %></p>
    </li>
    <% end %>
</ul>

<%= link_to "Back to Tags", tags_path, class: 'button_link' %>

<% if logged_in? %>
  <%= link_to "Delete Tag", tag_path(@tag), method: :delete, data: {confirm: "Are you sure you want to delete this tag?"}, class: 'button_link' %>
<% end %>
